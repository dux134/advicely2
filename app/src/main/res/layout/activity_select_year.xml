<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/selectyear"
    tools:context="com.example.root.advicely.SelectCourse">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view3"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardElevation="@dimen/activity_horizontal_margin"
        app:contentPadding="@dimen/default_circle_indicator_radius"
        app:layout_constraintBottom_toTopOf="@+id/card_view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/first_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorYellow"
            android:text="I\n(First Year)"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="387dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view3"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:cardElevation="@dimen/activity_horizontal_margin"
        app:contentPadding="@dimen/default_circle_indicator_radius"
        app:layout_constraintBottom_toTopOf="@+id/card_view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/second_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorYellow"
            android:text="II\n(Second Year)"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="55dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view2"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:cardElevation="@dimen/activity_horizontal_margin"
        app:contentPadding="@dimen/default_circle_indicator_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/third_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorYellow"
            android:text="III\n(Third Year)"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="121dp" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
